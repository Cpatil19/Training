<mvc:View
    controllerName="deloitte.tranning.tranning.controller.Details"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page title="Employee Detail">
    <VBox class="sapUiSmallMargin">
        <Text
            text="John Doe"
            class="sapMTitle"
        />
        <Text text="Department: IT" />
        <Text text="Designation: Software Engineer" />
        <Text text="Email: john.doe@example.com" />
        <Text text="Phone: 1234567890" />
        <Text text="Location: New York" />

        <Title
            text="Employment History"
            level="H3"
            class="sapUiMediumMarginTop"
        />
        <Table>
            <columns>
                <Column>
                    <Text text="Company" />
                </Column>
                <Column>
                    <Text text="Position" />
                </Column>
                <Column>
                    <Text text="Start Date" />
                </Column>
                <Column>
                    <Text text="End Date" />
                </Column>
            </columns>
            <items>
                <ColumnListItem>
                    <cells>
                        <Text text="ABC Corp" />
                        <Text text="Intern" />
                        <Text text="01-Jan-2019" />
                        <Text text="31-Dec-2019" />
                    </cells>
                </ColumnListItem>
                <ColumnListItem>
                    <cells>
                        <Text text="XYZ Ltd" />
                        <Text text="Junior Developer" />
                        <Text text="01-Jan-2020" />
                        <Text text="31-Dec-2021" />
                    </cells>
                </ColumnListItem>
                <ColumnListItem>
                    <cells>
                        <Text text="TechSoft" />
                        <Text text="Software Engineer" />
                        <Text text="01-Jan-2022" />
                        <Text text="Present" />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </VBox>
</Page>
</mvc:View>
